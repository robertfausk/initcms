{% block navbar %}
    <div class="header {{ (navbar.hasOption('fixedTop') and  navbar.getOption('fixedTop')) ? 'navbar-fixed-top' : '' }}">
        {{ navbar.hasMenu('langMenu') ? knp_menu_render(navbar.getMenu('langMenu'), {'currentClass': 'active', 'ancestorClass': '', 'allow_safe_labels': 'true'}) : '' }}
        {{ navbar.hasMenu('loginMenu') ? knp_menu_render(navbar.getMenu('loginMenu'), {'currentClass': 'active', 'allow_safe_labels': 'true'}) : '' }}

        {% if navbar.hasOption('logo') %}
            <div style="margin-right:20px;float:left;"><img src="{{ asset(navbar.getOption('logo')) }}" /></div>
        {% endif %}
        {% if navbar.hasOption('title') %}
            <div style="float:left;">
                <h3>{{ navbar.getOption('title') }}</h3>
            </div>
        {% endif %}
        <div class="clearfix"></div>
    </div>
    <div class="row-fluid nav-main-container">
    {{ navbar.hasMenu('pageMenu') ? knp_menu_render(navbar.getMenu('pageMenu'), {'depth':1, 'currentClass': 'active', 'ancestorClass': 'active', 'allow_safe_labels': 'true'}) : '' }}
        {{ mopa_bootstrap_navbar('subNavbar') }}
    </div>
{% endblock navbar %}




