{% extends "SandboxInitCmsBundle::layout.html.twig" %}
{% block fos_user_content %}
<div class="sonata-user-edit-profile">
    <h2>{{ "title_user_account" | trans({}, 'SonataUserBundle')}} - {{ "title_user_edit_profile" | trans({}, 'SonataUserBundle')}}</h2>

    <form action="{{ path('sonata_user_profile_edit') }}" method="POST">
        {{ form_rest(form) }}

        <div class="well form-actions">
            <input type="submit" class="btn btn-primary" name="submit" value="{{ 'sonata_user_submit'|trans({}, 'SonataUserBundle') }}" />
        </div>

    </form>

</div>
{% endblock fos_user_content %}
