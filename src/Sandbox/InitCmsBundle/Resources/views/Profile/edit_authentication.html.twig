{% extends "SandboxInitCmsBundle::layout.html.twig" %}

{% block fos_user_content %}
<div class="sonata-user-edit-authentication">

    <h2>{{ "title_user_account" | trans({}, 'SonataUserBundle')}} - {{ "title_user_edit_authentication" | trans({}, 'SonataUserBundle')}}</h2>

    <form action="{{ path('sonata_user_profile_edit_authentication') }}" method="POST">
        {{ form_rest(form) }}

        <div class="well form-actions">
            <input type="submit" name="submit" class="btn btn-primary" value="{{ 'sonata_user_submit'|trans({}, 'SonataUserBundle') }}" />
        </div>
    </form>

</div>
{% endblock fos_user_content %}
