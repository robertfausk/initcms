{% from 'NetworkingInitCmsBundle:GalleryView:macro.html.twig' import lightbox, carousel %}

{% if text is defined %}
    {{ text | raw }}
{% endif %}

{% if galleryView is defined %}
    {# create a lightbox view #}
    {% if galleryView.galleryType == 'lightbox' %}
        {{ lightbox(galleryView.mediaGallery) }}
    {% endif %}

    {# create a carousel view #}
    {% if galleryView.galleryType == 'carousel' %}
        {{ carousel(galleryView.mediaGallery, 'centerCarousel', null, 'medium', '300px') }}
    {% endif %}
{% endif %}
